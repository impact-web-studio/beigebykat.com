---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import About from '~/components/widgets/About.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Button from '~/components/ui/Button.astro';
import Services from '~/components/widgets/Services.astro';

// Service Images
import HighContrastBlonde from '~/assets/images/services/high-contrast-blonde.jpg';

const metadata = {
  title: 'AstroWind — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero2
    title="Toronto Balayage Specialist"
    tagline="a soft space for your transformation"
    id="home"
  >
    <Fragment slot="content">
      <p class="intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        This isn’t just about hair — it’s about how you feel walking out of the studio. At Beige by Kathy, every session
        is an intentional experience where your beauty, your story, and your time matter. I specialize in elevated,
        lived-in balayage — rich, dimensional colour that grows out effortlessly and complements your natural tones.
        Whether you’re coming in to refresh, reinvent, or reclaim a part of yourself, you’re in the right place.
      </p>
    </Fragment>
    <Fragment slot="action">
      <div class="intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        <Button
          variant="primary"
          text="Schedule an Appointment"
          href="https://www.kathymach.com/appointments"
          target="_blank"
          type="button"
        />
      </div>
    </Fragment>
  </Hero2>

  <!-- About Widget -->
  <About />

  <!-- Services Widget *************** -->

  <Services
    id="services"
    classes={{ headline: { title: 'font-serif' } }}
    tagline="Services"
    title="Styles & Colours"
    subtitle="A consultation will be held to discuss your desired look, and the total price will be provided before we begin your appointment. If you have any questions regarding our services, please don't hesitate to <a class='text-primary transition-all duration-300 ease-in-out hover:text-black' href='/contact'>contact me.</a>"

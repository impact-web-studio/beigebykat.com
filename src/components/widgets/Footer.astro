---
import { Icon } from 'astro-icon/components';

import Logo from '~/components/Logo.astro';
import GoogleMaps from './GoogleMaps.astro';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
  target?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], links = [], footNote = '' } = Astro.props;
---

<footer class:list={['relative border-t border-gray-200 not-prose bg-[var(--aw-color-primary)]']}>
  <div
    class="absolute inset-0 pointer-events-none"
    aria-hidden="true"
  >
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-8 md:pt-12">
      <!-- Two column layout -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pb-4 md:pb-10">
        <Logo />
        <!-- Info Sections -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
          <!-- Opening Hours -->
          <div>
            <h3 class="font-bold mb-2 font-serif text-white">Opening Hours</h3>
            <ul class="text-sm">
              <!-- <li class="mb-1">Monday - Friday: 9AM - 6PM</li> -->
              <li class="mb-1 text-white/80">Saturday: 10AM - 4PM</li>
              <!-- <li class="mb-1">Sunday: Closed</li> -->
            </ul>
          </div>

          <!-- Contact Info -->
          <div>
            <h3 class="font-bold mb-2 font-serif text-white">Contact Info</h3>
            <ul class="text-sm text-white/80">
              <!-- <li class="mb-1">Phone: (555) 123-4567</li> -->
              <li class="mb-1"><a href="mailto:beigebykat@gmail.com">beigebykat@gmail.com</a></li>
            </ul>
          </div>

          <!-- Address -->
          <div>
            <h3 class="font-bold mb-2 font-serif text-white">Address</h3>
            <p class="text-sm text-white/80">
              Private Home Studio <br /> near Green Lane & Leslie in Newmarket, ON.
              <br />
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Social Links and Footer Note -->
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8 border-t border-gray-200 mt-8">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4">
            {socialLinks.map(({ ariaLabel, href, text, icon, target }) => (
              <li>
                <a
                  class="text-white/80  hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200  rounded-lg text-sm p-2.5 inline-flex items-center"
                  aria-label={ariaLabel}
                  href={href}
                  target={target}
                >
                  {icon && (
                    <Icon
                      name={icon}
                      class="w-5 h-5"
                    />
                  )}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-xs mr-4 text-white/80">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>

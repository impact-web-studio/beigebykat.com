---
import Image from '~/components/common/Image.astro';
import { getHomePermalink } from '~/utils/permalinks';
import LogoSrc from '~/assets/images/beigebykat-logo-black.svg';
import FooterSrc from '~/assets/images/beigeybykat-logo-white.svg';

const { location = '' } = Astro.props;
---

<a
  class="inline-block font-bold text-xl h-fit w-fit"
  href={getHomePermalink()}
>
  {
    location === 'footer' ? (
      <div class="h-fit w-[200px] lg:min-w-[260px] xl:min-w-[320px]">
        <Image
          src={FooterSrc}
          alt="Graphic logo for beigebykat color & creative hair studio"
          class="!object-contain"
          width={300}
          height={100}
        />
      </div>
    ) : (
      <div class="h-fit w-[180px] lg:min-w-[220px] xl:min-w-[320px] p-2 md:p-3">
        <Image
          src={LogoSrc}
          alt="Graphic logo for beigebykat color & creative hair studio"
          class="!object-contain"
          width={300}
          height={100}
        />
      </div>
    )
  }
</a>
